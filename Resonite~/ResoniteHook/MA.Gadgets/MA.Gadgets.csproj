<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>nadena.dev.resonity.gadgets</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <ResoniteDir Condition="Exists('../../ResoniteDir')">../../ResoniteDir</ResoniteDir>
        <ResoniteDir Condition="Exists('C:\Program Files (x86)\Steam\steamapps\common\Resonite')">C:\Program Files (x86)\Steam\steamapps\common\Resonite</ResoniteDir>
    </PropertyGroup>
    <ItemGroup>
        <Reference Include="AssimpNet">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/AssimpNet.dll</HintPath>
        </Reference>
        <Reference Include="BepuPhysics">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/BepuPhysics.dll</HintPath>
        </Reference>
        <Reference Include="Elements.Assets">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/Elements.Assets.dll</HintPath>
        </Reference>
        <Reference Include="Elements.Core">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/Elements.Core.dll</HintPath>
        </Reference>
        <Reference Include="Elements.Quantity">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/Elements.Quantity.dll</HintPath>
        </Reference>
        <Reference Include="FrooxEngine">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/FrooxEngine.dll</HintPath>
        </Reference>
        <Reference Include="FrooxEngine.Commands">
            <PrivateAssets>all</PrivateAssets>
