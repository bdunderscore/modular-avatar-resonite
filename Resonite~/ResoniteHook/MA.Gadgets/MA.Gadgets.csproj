        <Reference Include="ProtoFluxBindings">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/ProtoFluxBindings.dll</HintPath>
        </Reference>
        <Reference Include="SkyFrost.Base">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/SkyFrost.Base.dll</HintPath>
        </Reference>
        <Reference Include="SkyFrost.Base.Models">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/SkyFrost.Base.Models.dll</HintPath>
        </Reference>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="resources\" />
    </ItemGroup>
    <ItemGroup>
      <None Remove="resources\loading_standin.resonitepackage" />
