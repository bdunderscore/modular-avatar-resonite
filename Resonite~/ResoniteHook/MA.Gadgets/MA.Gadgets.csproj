            <HintPath>$(ResoniteDir)/FrooxEngine.Commands.dll</HintPath>
        </Reference>
        <Reference Include="FrooxEngine.Store">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/FrooxEngine.Store.dll</HintPath>
        </Reference>
        <Reference Include="FrooxEngine.Weaver">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/FrooxEngine.Weaver.dll</HintPath>
        </Reference>
        <Reference Include="ProtoFlux.Core">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
            <HintPath>$(ResoniteDir)/ProtoFlux.Core.dll</HintPath>
        </Reference>
        <Reference Include="ProtoFlux.Nodes.Core">
            <PrivateAssets>all</PrivateAssets>
            <Private>false</Private>
